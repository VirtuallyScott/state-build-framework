# Environment variables for Build State API
# Copy this file to .env and update values for your environment

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (comma-separated list)
API_KEYS=dev-key-12345,prod-key-67890,ci-key-abcdef

# Database Configuration
# For SQLite (default):
DATABASE_URL=/app/data/builds.db

# For PostgreSQL (uncomment and configure if using postgres service):
# DATABASE_URL=postgresql://buildapi:change-this-password@postgres:5432/builds

# Redis Configuration (for caching and horizontal scaling)
REDIS_URL=redis://redis:6379/0
CACHE_ENABLED=true
CACHE_TTL=300

# Application Configuration
WORKERS_PER_CONTAINER=4
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=info

# CORS (if needed for web frontend)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com